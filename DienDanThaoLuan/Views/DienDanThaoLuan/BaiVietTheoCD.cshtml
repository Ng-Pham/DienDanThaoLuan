@model List<DienDanThaoLuan.Models.BaiVietView>

@{
    ViewBag.Title = "BaiVietTheoCD";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


@section breadcrumb{
    <div class="container mt-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                @if (Model.Any())
                {
                    foreach (var ten in Model)
                    {
                        <li class="breadcrumb-item"><a href="@Url.Action("ChuDe", "DienDanThaoLuan", new { id = ten.MaLoai })">@ten.TenLoai</a></li>
                        <li class="breadcrumb-item active" aria-current="page"><a href="@Url.Action("BaiVietTheoCD", "DienDanThaoLuan", new { id = ten.MaCD, tenloai = ten.TenLoai })">@ten.TenCD</a></li>
                        break;
                    }
                }
                else
                {
                    <li class="breadcrumb-item"><a href="@Url.Action("ChuDe", "DienDanThaoLuan", new { id = @ViewBag.MaLoai })">@ViewBag.TenLoai</a></li>
                    <li class="breadcrumb-item active" aria-current="page"><a href="@Url.Action("BaiVietTheoCD", "DienDanThaoLuan", new { id = @ViewBag.MaCD, tenloai = @ViewBag.TenLoai })">@ViewBag.TenCD</a></li>
                }
            </ol>
        </nav>
    </div>
}
<div class="row my-5">
    <!-- Left Column -->
    <div class="col-md-8">
        <!-- Most Discussed Topics -->
        <div class="flex-grow-1 me-3 bg-white p-2 rounded">
            <div class="d-flex justify-content-end mb-2">
                <div class="me-2">
                    <button onclick="location.href='@Url.Action("ThemBV", "DienDanThaoLuan")'" class="btn btn-primary">Thêm bài</button>
                </div>
                @if (Model.Any())
                {
                    foreach (var ten in Model)
                    {
                        <div>
                            <div class="dropdown">
                                <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">Lọc</button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="@Url.Action("Loc", "DienDanThaoLuan", new { sortOrder = "newest", @ten.MaLoai, @ten.TenLoai, id=@ten.MaCD})">Mới nhất</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Loc", "DienDanThaoLuan", new { sortOrder = "oldest", @ten.MaLoai, @ten.TenLoai, id=@ten.MaCD })">Lâu nhất</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Loc", "DienDanThaoLuan", new { sortOrder = "az", @ten.MaLoai, @ten.TenLoai, id=@ten.MaCD })">Tiêu đề bài viết từ A-Z</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Loc", "DienDanThaoLuan", new { sortOrder = "za", @ten.MaLoai, @ten.TenLoai,id= @ten.MaCD })">Tiêu đề bài viết từ Z-A</a></li>
                                </ul>
                            </div>
                        </div>
                        break;
                    }
                }
                else
                {
                <div>
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">Lọc</button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="@Url.Action("Loc", "DienDanThaoLuan", new { sortOrder = "newest", ViewBag.MaLoai, ViewBag.TenLoai,id= ViewBag.MaCD})">Mới nhất</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Loc", "DienDanThaoLuan", new { sortOrder = "oldest", ViewBag.MaLoai, ViewBag.TenLoai, id=ViewBag.MaCD })">Lâu nhất</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Loc", "DienDanThaoLuan", new { sortOrder = "az", ViewBag.MaLoai, ViewBag.TenLoai, id=ViewBag.MaCD })">Tiêu đề bài viết từ A-Z</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Loc", "DienDanThaoLuan", new { sortOrder = "za", ViewBag.MaLoai, ViewBag.TenLoai, id=ViewBag.MaCD })">Tiêu đề bài viết từ Z-A</a></li>
                        </ul>
                    </div>
                </div>
                }
                
            </div>
            <!-- Post Items -->
            @if (!Model.Any())
            {
                <div class="alert alert-warning">@ViewBag.Message</div>
            }
            else
            {
                foreach (var t in Model)
                {
                    <div class="mb-1 rounded-0 border-top pt-3">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div class="d-flex align-items-center">
                                    <img src="~/Images/avatar.jpg" alt="User Avatar" class="img-fluid rounded-circle" width="50">
                                    <div class="ms-3">
                                        <h5 class="card-title mb-1"><a href="@Url.Action("NDBaiViet", "DienDanThaoLuan", new { id = t.MaBV, maloai = t.MaLoai, tenloai = t.TenLoai, macd = t.MaCD, tencd = t.TenCD })" class="text-decoration-none text-dark">@t.TieuDe</a></h5>
                                        <p class="text-muted">@t.TenTV</p>
                                    </div>
                                </div>
                                <div class="text-end">
                                    <p class="mb-1">Ngày đăng: <span class="text-muted">@t.NgayDang</span></p>
                                    <p class="mb-0">Trả lời: <span class="text-muted">@t.SoBL</span></p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    <!-- Right Column (Admin Section) -->
    <div class="col-md-4">
        @Html.Action("PartialQTV", "DienDanThaoLuan")
    </div>
</div>


